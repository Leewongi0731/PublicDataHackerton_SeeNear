<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HackathonApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fontFamily">@font/nanum_square_round_b</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="WhiteButton" parent="Base.TextAppearance.AppCompat.Button" >
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>